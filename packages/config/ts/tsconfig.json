{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"baseUrl": ".",
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"lib": [
			"esnext",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"newLine": "lf",
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"stripInternal": true,
		"target": "es5",
		"useDefineForClassFields": true
	},
	"exclude": [
		"**/dist/**",
		"**/node_modules/**"
	],
	"typeAcquisition": {
		"enable": true
	}
}