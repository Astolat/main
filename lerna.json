{
  "command": {
    "publish": {
      "npmClient": "npm",
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "allowBranch": "master",
      "exact": true,
      "includeMergedTags": true,
      "message": "chore(release): publish",
      "ignoreChanges": [
        "*.md",
        "*.spec.*"
      ]
    },
    "bootstrap": {
      "forceLocal": true,
      "includeDependents": true,
      "includeDependencies": true
    }
  },
  "npmClient": "yarn",
  "packages": [
    "packages/**"
  ],
  "useWorkspaces": true,
  "version": "independent"
}